MACRO(MAKE_WINDOWS_PATH pathname)
  IF(WIN32)
  SET(ESCAPED_PATH_TMP "${${pathname}}")
  STRING(REPLACE "/" "\\\\" ESCAPED_PATH_TMP "${ESCAPED_PATH_TMP}")
  #STRING(REPLACE " " "\\ " ESCAPED_PATH_TMP "${ESCAPED_PATH_TMP}")
  SET(${pathname}_ESCAPED "${ESCAPED_PATH_TMP}")
  ENDIF(WIN32) 
ENDMACRO(MAKE_WINDOWS_PATH)