MACRO (GET_RESOURCE_FILES FILE_SRCS RESOURCE_SRCS)
SET(${RESOURCE_SRCS} "")
FOREACH(SRC_FILE ${FILE_SRCS})
    GET_FILENAME_COMPONENT(ext ${SRC_FILE} EXT)
    FOREACH(RESOURCE_TYPE "uir" "ico" "bmp" "txt")
        IF("${ext}" MATCHES "${RESOURCE_TYPE}$")
        MAKE_WINDOWS_PATH(SRC_FILE)
        LIST(APPEND ${RESOURCE_SRCS} "${SRC_FILE_ESCAPED}")
		LIST(APPEND ${RESOURCE_SRCS} "\n")
        ENDIF("${ext}" MATCHES "${RESOURCE_TYPE}$")
    ENDFOREACH(RESOURCE_TYPE)
ENDFOREACH(SRC_FILE)
ENDMACRO(GET_RESOURCE_FILES)